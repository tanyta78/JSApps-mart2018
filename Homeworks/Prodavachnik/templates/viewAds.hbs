<section id="viewAds" class="viewAds">
  <h1 class="titleForm">Advertisements</h1>
  <div id="ads" class="ads">
    <table>
      <tr>
        <th>Title</th>
        <th>Publisher</th>
        <th>Description</th>
        <th>Price</th>
        <th>Date Published</th>
        <th>Actions</th>
      </tr>
      {{#each ads}}

      <tr id="ad-{{this.id}}">
        <td>{{title}}</td>
        <td>{{publisherName}}</td>
        <td>{{description}}</td>
        <td>{{price}}</td>
        <td>{{date}}</td>
        <td class="publisher-{{publisherId}} ad-actions">
          <a class= "read-button" href="#">[Read More]</a>
          <a class= "delete-button" href="#">[Delete]</a>
          <a class= "edit-button" href="#">[Edit]</a>
        </td>
      </tr>
      {{/each}}
    </table>
  </div>
</section>