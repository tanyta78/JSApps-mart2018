<section id="view{{action}}Ad" class="view{{action}}Ad">
  <h1 class="titleForm">{{action}} existing advertisement</h1>
  <form id="form{{action}}Ad" class="form">
    <div>
      <input type="hidden" name="id" value="{{id}}" required />
    </div>
    <div>
      <input type="hidden" name="publisher" value="{{publisherName}}" required />
    </div>
    <div>
      <input type="hidden" name="publisherId"  value="{{publisherId}}" required />
    </div>
    <div>Title:</div>
    <div>
      <input type="text" name="title" value="{{title}}" required />
    </div>
    <div>Description:</div>
    <div>
      <textarea name="description" rows="10" required>{{description}}</textarea>
    </div>
    <div>Date Published:</div>
    <div>
      <input type="date" name="datePublished" value="{{dateForm}}" required />
    </div>
    <div>Image:</div>
    <div>
      <input type="text" name="link" value="{{link}}" required />
    </div>
    <div>Price:</div>
    <div>
      <input type="number" step="0.01" name="price" value="{{price}}" required />
    </div>
    <div>
      <input type="button" id="button{{action}}Ad" value="{{action}}" />
    </div>
  </form>
</section>